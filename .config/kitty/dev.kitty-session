# See https://sw.kovidgoyal.net/kitty/sessions/

# Tab 1: The Default Tab
cd ~/src
title Projects
enabled_layouts tall,stack
layout tall
launch --title "Shortcuts" --hold --cwd=$HOME .config/kitty/kitty-init-0.sh

new_tab DevBase
layout splits
cd ~/src/shellbase
launch --title "ShellBase" bash
cd ~/src/devbase
launch --title "DevBase" bash

new_tab LLM-prompting
cd ~/src/llm-prompting
launch bash

new_tab Vandamme
cd ~/src/vandamme-proxy
launch bash

new_tab SLS
cd ~/src/storyloom-studio
launch --title "SLS" bash
cd ~/sls-projects/
launch --title "SLS Projects" bash

new_tab AssiFix
cd ~/src/assifix-subscription-tracker
launch bash

new_tab Book-1
cd ~/storyloom-studio-projects/book-1
launch bash

new_tab Hug
cd ~/src/hug-scm
